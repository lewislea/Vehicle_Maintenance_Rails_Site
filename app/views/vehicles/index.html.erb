<h2 class = "span9">Your Vehicles</h2>
<p class = "span9"><%= link_to "Add Vehicle", new_vehicle_path, class: "btn btn-primary" %></p>
<table class = "span9 table table-bordered table-hover">
  <th>Make</th>
  <th>Model</th>
  <th>Year</th>
  <th>Mileage</th>
  <th>Date Purchased</th>
  <th></th>
  <th></th>
  <% @all_vehicles.each do |vehicle| %>
  <tr>
    <td><%="#{vehicle.make}"%></td>
    <td><%="#{vehicle.model}"%></td>
    <td><%="#{vehicle.year}"%></td>
    <td><%="#{vehicle.mileage}"%></td>
    <td><%="#{vehicle.purchased_on}"%></td>
    <td><%= link_to "Edit Vehicle", edit_vehicle_path("#{vehicle.id}"), class: "btn" %></td>
    <td><%= link_to "Add/View Repairs", vehicle_path("#{vehicle.id}"), class: "btn" %></td>
    <td><%= link_to "Delete vehicle", @vehicle ,:method => :delete, :confirm => "Are you sure you want to delete this vehicle?", class: "btn btn-danger"  %></td>
<% end %>
  </tr>
<% if @all_vehicles.empty? %>
<p>No Vehicles Added</p>
<% end %>
</table>

